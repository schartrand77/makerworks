ENV=development
ENV_FILE=.env

APP_NAME="MakerWorks API"
API_VERSION=0.1.0

SECRET_KEY="dev-secret-change-me"
SESSION_SECRET="dev-secret-change-me"

DEBUG=true

DOMAIN="http://localhost:8000"
BASE_URL="http://localhost:8000"

# Container paths (must exist in backend container)
UPLOADS_PATH="/app/uploads"
UPLOAD_DIR="/app/uploads"
MODEL_DIR="/models"
AVATAR_DIR="/app/avatars"

THUMBNAILS_DIR="/thumbnails"
THUMBNAILS_URL_PREFIX="/thumbnails"
THUMBNAIL_BACKEND="plotly"
THUMBNAIL_SIZE=1024
THUMBNAIL_AZIM_DEG=90
THUMBNAIL_ELEV_DEG=0
THUMBNAIL_SSAA=4
THUMBNAIL_FRAME_MARGIN=0.06
THUMBNAIL_MAX_RATIO=0.85
THUMBNAIL_CULL=0
THUMBNAIL_BASE_RGB="0.90,0.90,0.90"
THUMBNAIL_AMBIENT=0.62
THUMBNAIL_DIFFUSE=0.38
THUMBNAIL_GAMMA=1.10
THUMBNAIL_LIGHT_DIR="0.30,0.20,1.0"
THUMBNAIL_FILL_DIR="-0.60,-0.20,1.0"
THUMBNAIL_FILL_INT=0.20
THUMBNAIL_SPEC_K=0.03
THUMBNAIL_SPEC_P=24
THUMBNAIL_RIM_K=0.03
THUMBNAIL_FLATTEN_BG="white"

# Use the docker-compose service DNS, not localhost
DATABASE_URL="postgresql+asyncpg://makerworks:makerworks@postgres:5432/makerworks"

REDIS_URL="redis://redis:6379/0"
CELERY_BROKER_URL="redis://redis:6379/0"
CELERY_RESULT_BACKEND="redis://redis:6379/0"
CELERY_ENABLED=false

JWT_ALGORITHM=HS256
JWT_SECRET="your-jwt-secret"
AUTH_AUDIENCE="makerworks"

# Seed/refresh admin on boot
ADMIN_EMAIL="admin@example.com"
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change-me-please"
ADMIN_FORCE_UPDATE=true

STRIPE_SECRET_KEY="sk_test_yourkey"
STRIPE_WEBHOOK_SECRET="whsec_yourkey"

METRICS_API_KEY=
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Valid JSON; no spaces for your picky parser
CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173","http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000"]

BAMBU_IP=

HOST=0.0.0.0
PORT=8000
