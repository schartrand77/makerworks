# ðŸ“„ Environment
ENV=development
ENV_FILE=.env

# ðŸ“„ App Info
APP_NAME=MakerWorks
API_VERSION=0.1.0

# ðŸ“„ URLs (root-level for both frontend & backend)
DOMAIN=http://localhost:8000
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# ðŸ“„ Database (shared for backend services)
POSTGRES_USER=makerworks
POSTGRES_PASSWORD=makerworks
POSTGRES_DB=makerworks
DATABASE_URL=postgresql+asyncpg://makerworks:makerworks@postgres:5432/makerworks

# ðŸ“„ Redis (shared between backend and worker)
REDIS_URL=redis://redis:6379/0

# ðŸ“„ Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ðŸ“„ Security
SECRET_KEY=change-this-to-a-long-random-value
JWT_ALGORITHM=HS256
JWT_SECRET=your-jwt-secret
AUTH_AUDIENCE=makerworks

# ðŸ“„ Admin User (seeded on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-please   # anything non-placeholder
ADMIN_FORCE_UPDATE=true                  # leave true for this boot

# ðŸ“„ Stripe (shared between backend and frontend)
STRIPE_SECRET_KEY=sk_test_yourkey
STRIPE_WEBHOOK_SECRET=whsec_yourkey
STRIPE_PUBLISHABLE_KEY=pk_test_yourkey

# ðŸ“„ Upload directories (relative to backend container)
UPLOADS_PATH=/app/uploads

# ðŸ“„ CORS Origins (for both backend & frontend)
CORS_ORIGINS=["http://localhost:5173", "http://127.0.0.1:5173"]